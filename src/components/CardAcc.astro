---
const { imgs,titles,links } = Astro.props;
---

<a class="cardAcc" href={links}>
    <picture class="cardAcc__img">
        <img src={imgs} alt="" class="cardAcc__img--100">
    </picture>
    <h3 class="cardAcc__title">
        {titles}
    </h3>
</a>

<style>
    .cardAcc{
        width: 100%;
        max-width: 350px;
        min-width: 270px;
        height: max-content;
        display: flex;
        flex-flow: column nowrap;
        gap: 20px;
    }
    .cardAcc__img{
        width: 100%;
        height: 400px;
        border-radius: 10px;
        overflow: hidden;
        background-color: white;
        box-shadow: 1px 1px 2px rgba(0,0,0,0.12)
    }
    .cardAcc__img--100{
        width: 100%;
        height: 100%;
        object-fit: contain;
    }
    .cardAcc__title{
        padding: 0 40px;
        width: 100%;
        text-align: center;
        text-transform: capitalize;
        font-size: 20px;
    }

    .cardAcc:hover .cardAcc__text{
        background-color: #22222293;
        transition: all ease-in 0.3s;
    }
    .cardAcc:hover .cardAcc__img>.cardAcc__img--100{
        transform: scale(1.02);
        transition: all ease-in 0.3s;
    }
    .cardAcc:hover .cardAcc__text>.cardAcc__goto{
        opacity: 1;
        visibility: visible;  
    }
    @media (max-width:800px){
        .cardAcc{
        width: 90%;
        max-width: unset;
        min-width: unset;
        height: max-content;
        gap: 20px;
        overflow: hidden;
    }
    .cardAcc__title{
        padding: 0 0px;
        width: 100%;
        text-align: center;
        text-transform: capitalize;
        font-size: 14px;
    }
    .cardAcc__img{
        width: 100%;
        height: 200px;
        border-radius: 10px;
        overflow: hidden;
        background-color: white;
        box-shadow: 1px 1px 2px rgba(0,0,0,0.12)
    }
    }
</style>