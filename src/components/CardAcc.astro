---
const { imgs,titles,links } = Astro.props;
---

<a class="cardAcc" href={links}>
    <picture class="cardAcc__img">
        <img src={imgs} alt="" class="cardAcc__img--100">
    </picture>
    <section class="cardAcc__text" >
        <h3 class="cardAcc__title">
            {titles}
        </h3>
        <p class="cardAcc__goto">
            Ver m√°s
        </p>
    </section>
</a>

<style>
    .cardAcc{
        background-color: #fff;
        width: 100%;
        max-width: 350px;
        min-width: 270px;
        height: 270px;
        border-radius: 10px;
        display: grid;
        grid-template-columns: 100%;
        grid-template-rows: 100%;
        overflow: hidden;
        box-shadow: 1px 1px 2px rgba(0,0,0,0.12)
    }
    .cardAcc__img{
        width: 100%;
        height: 100%;
        grid-row: 1;
        grid-column: 1;
        background-color: black;
    }
    .cardAcc__img--100{
        width: 100%;
        height: 100%;
        object-fit: contain;
    }
    .cardAcc__text{
        grid-column: 1;
        grid-row: 1;
        background-color: #22222242;
        z-index: 2;
        display: flex;
        flex-flow: column nowrap;
        gap: 10px;
        justify-content: center;
        align-items: center;
    }
    .cardAcc__title{
        background-color: rgba(245, 245, 247, 0.849);
        padding: 10px;
        border-radius: 20px;
        min-width: 150px;
        text-align: center;
    }
    .cardAcc__goto{
        color: rgb(245, 245, 247);
        font-weight: bold;
        opacity: 0;
        visibility: hidden;
        transition: all ease-in 0.3s;
    }
    .cardAcc:hover .cardAcc__text{
        background-color: #22222293;
        transition: all ease-in 0.3s;
    }
    .cardAcc:hover .cardAcc__img>.cardAcc__img--100{
        transform: scale(1.02);
        transition: all ease-in 0.3s;
    }
    .cardAcc:hover .cardAcc__text>.cardAcc__goto{
        opacity: 1;
        visibility: visible;  
    }

</style>