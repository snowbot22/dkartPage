---
const { title, img } = Astro.props;
---

<section class="band">
  <h1 class="band__title">{title}</h1>
</section>

<style>
  .band {
    width: 100%;
    height: 270px;
    display: grid;
    place-items: center;
    background-image: url("/images/main2.png");
    background-size: cover;
    background-position: top;
    filter: grayscale(100%);
    margin-bottom: 30px;
  }
  .band__image {
    grid-column: 1;
    grid-row: 1;
    background-size: cover;
    background-position: top;
    filter: grayscale(100%);
    width: 100%;
    height: 100%;
  }
  .band__title {
    color: var(--white);
    font-size: 60px;
    background-color: rgba(0, 0, 0, 0.61);
    width: 100%;
    height: 100%;
    display: grid;
    place-items: center;
    grid-row: 1;
    grid-column: 1;
    z-index: 2;
  }

  /* MEDIA QUERIES */
  @media (max-width: 1200px) and (min-width: 700px) {
    .band {
      height: 200px;
    }
    .band__title {
      font-size: 45px;
      text-align: center;
    }
  }

  @media (max-width: 700px) {
    .band {
      height: 150px;
    }
    .band__title {
      font-size: 40px;
      text-align: center;
    }
  }
</style>
