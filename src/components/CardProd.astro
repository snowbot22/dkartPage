---
    const { title } = Astro.props;

    const products=[
        "Drones",
        "Cámaras Multiespectrales",
        "GNSS Y GPS",
        "Estaciónes Totales",
        "Niveles de Topografía"
    ]
    const images=[
        "/images/e1-1.jpg",
        "/images/e2-2.jpg",
        "/images/e4-2.png",
        "/images/e3.png",
        "/images/e5-1.webp"
    ]
---

<section class="products__container">
    {products.map((p,index)=>{
        return <div class={`cardProd  item`+ (index+1)}>
            <picture class="cardProd__img">
                <img src={images[index]} alt="" class="img--100">
            </picture>
            <a class="cardProd__text" href="/">
                <h3 class="cardProd__title">
                    {p}
                </h3>
                <p class="cardProd__goto">
                    Ver más
                </p>
            </a>
        </div>
    })}
</section>


<style>
     .products__container{
        border-top: 1px solid #a3a3a363;
        padding-top: 30px;
        display: grid;
        grid-template-rows: repeat(2,1fr);
        grid-template-columns: repeat(3, 1fr);
        width: 100%;
        height: 600px;
        gap: 20px;
    }
    .cardProd{
        background-color: brown;
        width: 100%;
        height: 270px;
        border-radius: 10px;
        display: grid;
        grid-template-columns: 100%;
        grid-template-rows: 100%;
        overflow: hidden;
    }
    .cardProd__img{
        grid-row:1;
        grid-column: 1;
        width: 100%;
        height: 100%;
    }
    .cardProd__text{
        grid-column: 1;
        grid-row: 1;
        z-index: 2;
        height: 100%;
        background-color: #22222242;
        display: flex;
        flex-flow: column nowrap;
        gap: 10px;
        justify-content: center;
        align-items: center;
    }
    .item1{
        grid-row: 1/3;
        height: 100%;
    }
    .img--100{
        height: 100%;
        width: 100%;
        object-fit:cover;
        object-position: top;
    }
    .cardProd__title{
        background-color: rgb(245, 245, 247);
        padding: 10px;
        border-radius: 20px;
        min-width: 150px;
        text-align: center;
    }
    .cardProd:hover .cardProd__text{
        background-color: #22222293;
        transition: all ease-in 0.3s;
    }
    .cardProd:hover .cardProd__img>.img--100{
        transform: scale(1.02);
        transition: all ease-in 0.3s;
    }
    .cardProd__goto{
        color: rgb(245, 245, 247);
        font-weight: bold;
        opacity: 0;
        visibility: hidden;
        transition: all ease-in 0.3s;
    }
    .cardProd:hover .cardProd__text>.cardProd__goto{
        opacity: 1;
        visibility: visible;  
    }
</style>
