      {entry.data.includes && <p> {entry.data.includes} </p>}
      {entry.data.car && <p> {entry.data.car} </p>}
    </section>
  </article>
  <ProductSlider products={relatedProducts} cat="/equipos/"client:idle/>
  
</Layout>

